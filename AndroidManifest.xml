<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.ualberta.cs.views.TopicListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.ualberta.cs.views.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.views.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.views.TopicViewActivity"
            android:label="@string/topic_view_vctivity"
            android:parentActivityName="ca.ualberta.cs.views.TopicListActivity" >
        </activity>
        <activity
            android:name="ca.ualberta.cs.views.EditTopicActivity"
            android:label="@string/title_activity_edit_topic"
            android:parentActivityName="ca.ualberta.cs.views.TopicListActivity" >
        </activity>
        <activity
            android:name=".views.CommentViewActivity"
            android:label="@string/comment_view_activity"
            android:parentActivityName="ca.ualberta.cs.views.TopicViewActivity">
        </activity>
    </application>

</manifest>
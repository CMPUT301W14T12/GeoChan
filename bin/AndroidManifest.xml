        <activity
            android:name="ca.ualberta.cs.views.MapViewLocation"
            android:label="@string/title_activity_map_view_location" >
        </activity>
        <activity
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
            android:name="ca.ualberta.cs.views.MapViewLocationActivity"
            android:noHistory="false"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/title_activity_map_view_location" >
        </activity>
    </application>

</manifest>
